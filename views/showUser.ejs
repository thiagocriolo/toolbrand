<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>
		<%= user.nome %> | Toolbrand
	</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link rel="stylesheet" href="/css/style.css">
</head>

<body>
	<!-- O seu conteúdo vai aqui -->

	<div class="cadastrarprojeto modal fade" id="cadastraProjeto<%= user.id %>" tabindex="-1"
		aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h1 class="modal-title fs-5" id="exampleModalLabel">Cadastrar Projeto n° </h1>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<form action="/projetos/add/<%= user.id %>" method="POST">

						<div class="mb-3">
							<select class="form-select" aria-label="nome do Cliente Responsável" name="cliente">
								<option disabled selected>Selecione o participante</option>
								<% usuarios.forEach(function(cliente) { %>
									<option value="<%= cliente.id %>">
										<%= cliente.nome %>
									</option>
									<% }); %>
							</select>
						</div>

						<div class="mb-3">
							<input type="text" placeholder="Nome da Marca" class="form-control" id="nome" name="nome">
						</div>
						<div class="mb-3">
							<input type="date" placeholder="Previsão de início" class="form-control" id="data_ini"
								name="data_ini">
						</div>
						<div class="mb-3">
							<input type="date" placeholder="Previsão de encerramento" class="form-control" id="data_fim"
								name="data_fim">
						</div>
						<div class="mb-3">
							<input type="textarea" placeholder="Descrição do projeto" class="form-control"
								id="descricao" name="descricao">
						</div>
						<div class="mb-3">
							<input type="textarea" placeholder="Tipo do projeto" class="form-control" id="tipo_projeto"
								name="tipo_projeto">
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
							<button type="submit" class="btn btn-primary">Cadastrar</button>
						</div>
					</form>
				</div>

			</div>
		</div>
	</div>


	<div class="container-fluid h-100 text-center">
		<div class="row min-vh-100 h-100 align-items-center">


			<div> <%- include('partials/navbar.ejs') %> </div>


			<div class="dashboard col-11">
				<div class="boxcontainer container h-75 w-75 ">
					<div class="text-center projetos projlider">
						<div class="">
							<h1 class=""><i class="bi bi-grid-1x2"></i> Projetos liderados <br> </h1>
						</div>


						<div class="row h-100 align-items-center " style="display:flex">
							<div class="caixaprojeto col-3 align-self-stretch">
								<div class="dashbox projetovazio row align-items-center">
									<div class="projetoescopo">
										<div class="">
											<button type="button" class="btn " data-bs-toggle="modal"
												data-bs-target="#cadastraProjeto<%= user.id %>"
												data-bs-whatever="@getbootstrap">
												<i class="bi bi-plus-circle-fill"></i>
											</button>
										</div>
									</div>
								</div>
							</div>

							<% projetosLider.forEach(function(projetoLider) { %>
								<div class="caixaprojeto col-3 align-self-stretch">
									<div class="dashbox">
										<div class="projetoescopo">
											<div class=" col position-relative">
												<div class="projetoheader">
													<h2>
														<%= projetoLider.nome %>
													</h2>
													<h5>Status:
														<span class="fw-bold">
															Em andamento
														</span>
													</h5>
												</div>

												<div class="projetobody">
													<p>Pequeno brifing sobre o cliente e a conta.
													</p>
												</div>
												<div class="progresso">
													<div class="inside"></div>
												</div>
												<div class="projetorodape container-fluid">
													<div class="row">
														<div class="col-6 align-items-start">
															<div class="equipe projetocolaboradores">
																<a href="#">
																	<img src="/images/Avatars/avatars_1.png">
																	<img src="/images/Avatars/avatars_2.png">
																	<img src="/images/Avatars/avatars_3.png">
																	<span> + 4</span>
																</a>
															</div>
														</div>
														<div class="col-6 align-items-end alinhardireita">
															<%= projetoLider.data_fim %>
														</div>
													</div>
												</div>

												<div class="d-flex proj-dash-buttons mt-3">
													<div class="col th-contens"><a class="btn olho btn-primary"
															href="/projetos/show/<%= user.id %>/<%= projetoLider.id %>">
															<i class="bi bi-eye"></i> </a>
													</div>
													<div class="col th-contens segundo">
														<!-- Button trigger modal -->
														<button type="button" class="btn btn-primary"
															data-bs-toggle="modal" data-bs-target="#editaProjeto<%= projeto.id %>">
															<i class="bi bi-columns"></i> Editar Projeto </a>
														</button>

														<!-- Modal de editar projeto -->
														<div class="cadastrarprojeto modal fade" id="editaProjeto<%= projeto.id %>" tabindex="-1"
															aria-labelledby="exampleModalLabel" aria-hidden="true">
															<div class="modal-dialog">
																<div class="modal-content">
																	<div class="modal-header">
																		<h1 class="modal-title fs-5" id="exampleModalLabel">Editar Projeto</h1>
																		<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
																	</div>
												
																	<div class="modal-body">
																		<form action="/projetos/update/<%= id_usuario %>/<%= projeto.id %>" method="POST">
												
																			<div class="mb-3">
																				<p class="fw-bold">Editar projeto</p>
																				
																					<div class="mb-3">
																						<input type="text" value="<%= projeto.nome %>"  placeholder="Nome da Marca" class="form-control" id="nome" name="nome">
																					</div>
																					<div class="mb-3">
																						<input type="date" value="<%= projeto.data_ini %>"  placeholder="Previsão de início" class="form-control" id="data_ini"
																							name="data_ini">
																					</div>
																					<div class="mb-3">
																						<input type="date" value="<%= projeto.data_fim %>"  placeholder="Previsão de encerramento" class="form-control" id="data_fim"
																							name="data_fim">
																					</div>
																					<div class="mb-3">
																						<input type="textarea" value="<%= projeto.descricao %>"  placeholder="Descrição do projeto" class="form-control"
																							id="descricao" name="descricao">
																					</div>
																					<div class="mb-3">
																						<input type="textarea" value="<%= projeto.tipo_projeto %>"  placeholder="Tipo do projeto" class="form-control" id="tipo_projeto"
																							name="tipo_projeto">
																					</div>
																					
																					<div class="form-check">
																						<div class="">
																							<span>Projeto finalizado ?</span>
																						</div>
																						<input name="status" class="form-check-input" type="checkbox" value="1"
																							id="editaProjeto" >
																						<label class="form-check-label" for="editaProjeto">Sim</label>
																					</div>
												
																					<div class="modal-footer">
																						<button type="button" class="btn btn-secondary"
																							data-bs-dismiss="modal">Cancelar</button>
																						<button type="submit" class="btn btn-primary">Finalizar</button>
																					</div>
																											
																			</div>
												
																		</form>
																	</div>
												
												
																</div>
															</div>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
								<% }); %>
						</div>
					</div>




					<!-- {{!-- ====================== projetos como colaborador ============================= --}} -->
					<div class="text-center projetos projcolab">
						<div class="">
							<h1 class=""><i class="bi bi-people-fill"></i> Projetos como colaborador <br> </h1>
						</div>


						<div class="row h-100 align-items-center " style="display:flex">

							<% colabs.forEach(function(colab) { %>
								<div class="caixaprojeto col-3 align-self-stretch">
									<div class="dashbox">
										<div class="projetoescopo">
											<div class=" col position-relative">
												<div class="projetoheader">
													<h2>
														<%= colab.nome %>
													</h2>
													<h5>Status:
														<span class="fw-bold">
															Em andamento
														</span>
													</h5>
												</div>

												<div class="projetobody">
													<p>Pequeno brifing sobre o cliente e a conta.
													</p>
												</div>
												<div class="progresso">
													<div class="inside"></div>
												</div>
												<div class="projetorodape container-fluid">
													<div class="row">
														<div class="col-6 align-items-start">
															<div class="equipe projetocolaboradores">
																<a href="#">
																	<img src="/images/Avatars/avatars_1.png">
																	<img src="/images/Avatars/avatars_2.png">
																	<img src="/images/Avatars/avatars_3.png">
																	<span> + 4</span>
																</a>
															</div>
														</div>
														<div class="col-6 align-items-end alinhardireita">
															<%= colab.data_fim %>
														</div>
													</div>
												</div>

												<div class="d-flex proj-dash-buttons mt-3">
													<div class="col th-contens"><a class="btn olho btn-primary"
															href="/projetos/show/<%= user.id %>/<%= colab.id %>">
															<i class="bi bi-eye"></i> </a>
													</div>
													<div class="col th-contens segundo"><a class="btn btn-primary"
															href="/projetos/show/<%= user.id %>/<%= colab.id %>">
															<i class="bi bi-columns"></i> Editar Projeto </a>
													</div>

												</div>



											</div>
										</div>
									</div>
								</div>
								<% }); %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>



	<!-- jQuery (opcional) -->
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"
		integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5/5hb7ie3zZiA5n5+l5g5+G5Xzt4bE+U5VpBL2ep"
		crossorigin="anonymous"></script>

	<!-- Bootstrap JS -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
		integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
		crossorigin="anonymous"></script>

	<!-- Seu script customizado (se necessário) -->
	<script>
